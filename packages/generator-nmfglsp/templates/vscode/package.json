{
  "name": "<%= language-id %>-vscode",
  "displayName": "<%= LanguageName %> Diagram Editor",
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "icon": "data/NMF-Logo.png",
  "galleryBanner": {
    "color": "#262626",
    "theme": "dark"
  },
  "private": "true",
  "version": "0.1.0",
  "main": "./dist/<%= language-id %>-extension",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn compile && yarn bundle",
    "bundle": "webpack",
    "bundle:prod": "webpack --config ./webpack.prod.js",
    "clean": "rimraf lib tsconfig.tsbuildinfo dist",
    "compile": "tsc -b",
    "lint": "eslint --ext .ts,.tsx ./src",
    "package": "vsce package --yarn",
    "watch": "tsc -w",
    "watch:bundle": "webpack --watch"
  },
  "contributes": {
    "commands": [
      {
        "command": "<%= language-id %>.fit",
        "title": "Fit to Screen",
        "category": "<%= LanguageName %> Diagram",
        "enablement": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      },
      {
        "command": "<%= language-id %>.center",
        "title": "Center selection",
        "category": "<%= LanguageName %> Diagram",
        "enablement": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      },
      {
        "command": "<%= language-id %>.layout",
        "title": "Layout diagram",
        "category": "<%= LanguageName %> Diagram",
        "enablement": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      },
      {
        "command": "<%= language-id %>.exportAsSVG",
        "title": "Export as SVG",
        "category": "<%= language-id %> Diagram",
        "enablement": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      }
    ],
    "customEditors": [
      {
        "viewType": "<%= language-id %>.glspDiagram",
        "displayName": "<%= LanguageName %> Diagram Editor",
        "selector": [
          {
            "filenamePattern": "*.<%= file-glob-extension %>"
          }
        ]
      }
    ],
    "keybindings": [
      {
        "key": "alt+f",
        "mac": "alt+f",
        "command": "<%= language-id %>.fit",
        "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      },
      {
        "key": "alt+c",
        "mac": "alt+c",
        "command": "<%= language-id %>.center",
        "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      },
      {
        "key": "ctrl+a",
        "mac": "ctrl+a",
        "command": "<%= language-id %>.selectAll",
        "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      },
      {
        "key": "alt+l",
        "mac": "alt+l",
        "command": "<%= language-id %>.layout",
        "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      },
      {
        "key": "alt+e",
        "mac": "alt+e",
        "command": "<%= language-id %>.exportAsSVG",
        "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "submenu": "<%= language-id %>.editor.title",
          "group": "bookmarks"
        }
      ],
      "<%= language-id %>.editor.title": [
        {
          "command": "<%= language-id %>.fit",
          "group": "navigation",
          "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
        },
        {
          "command": "<%= language-id %>.center",
          "group": "navigation",
          "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
        },
        {
          "command": "<%= language-id %>.layout",
          "group": "navigation",
          "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
        },
        {
          "command": "<%= language-id %>.exportAsSVG",
          "when": "activeCustomEditorId == '<%= language-id %>.glspDiagram'"
        }
      ]
    },
    "submenus": [
      {
        "id": "<%= language-id %>.editor.title",
        "label": "Diagram"
      }
    ]
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "devDependencies": {
    "@eclipse-glsp/vscode-integration": "2.5.0",
    "@types/node": "20.x",
    "@types/vscode": "^1.54.0",
    "@vscode/vsce": "^2.24.0",
    "copy-webpack-plugin": "^11.0.0",
    "path": "^0.12.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "ts-loader": "^9.4.4",
    "ts-node": "^9.1.1",
    "webpack-merge": "^5.9.0",
    "<%= language-id %>-vscode-webview": "1.0.0"
  },
  "engines": {
    "vscode": "^1.54.0"
  },
  "vsce": {
    "dependencies": false
  }
}
